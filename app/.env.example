APP_NAME=TableauDeBord
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE
# ===========================================
# Option 1: SQLite (par défaut pour dev rapide)
DB_CONNECTION=sqlite

# Option 2: MySQL (recommandé pour production)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=tableaudebord
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# DÉVELOPPEMENT LOCAL:
# Option 1: Log (voir les emails dans storage/logs/laravel.log)
MAIL_MAILER=log

# Option 2: Mailpit (interface web pour visualiser les emails)
# Installer: https://github.com/axllent/mailpit
# Interface web: http://localhost:8025
# MAIL_MAILER=smtp
# MAIL_HOST=127.0.0.1
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null

# PRODUCTION (PlanetHoster):
# MAIL_MAILER=smtp
# MAIL_HOST=mail.votredomaine.com
# MAIL_PORT=587
# MAIL_USERNAME=noreply@votredomaine.com
# MAIL_PASSWORD=votre_mot_de_passe
# MAIL_ENCRYPTION=tls

MAIL_FROM_ADDRESS="noreply@tableaudebord.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
